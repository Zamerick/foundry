{
  "name": "zamerick/foundry",
  "description": "A tool for using the laravel 'make' commands outside of laravel. Great for package creation.",
  "keywords": [
    "artisan",
    "laravel",
    "cli"
  ],
  "homepage": "https://github.com/Zamerick/foundry",
  "type": "project",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/Zamerick/foundry/issues",
    "source": "https://github.com/Zamerick/foundry"
  },
  "authors": [
    {
      "name": "Alex Oxthorn",
      "email": "admin@alex-oxthorn.com"
    }
  ],
  "require": {
    "php": ">=7.1.3",
    "laravel-zero/framework": "5.7.*",
    "zendframework/zend-text": "^2.7"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.7",
    "mikey179/vfsStream": "^1.6",
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "~7.0",
    "symfony/thanks": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "app/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php application app:rename"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "bin": [
    "foundry"
  ]
}
